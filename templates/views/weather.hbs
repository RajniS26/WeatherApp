<body>

    {{>navbar}}

    <!-- main part -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">

                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                        <input type="submit" id="submitBtn" value="search">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tues</p>
                        <p id="today_data">8 may</p>
                    </div>
                    <div class="main_layer ">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span> <sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{>footer}}

    <script src="js/main.js"></script>

    {{!-- days --}}
    <script>
        const getCurrentDay = () => {
            let weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let currentTime = new Date();
            let days = weekday[currentTime.getDay()];
            const day = document.getElementById('day');

            day.innerText = days;
        }

        getCurrentDay();


        const getCurrentDateTime = () => {
            var months = [
                "Jan",
                "Feb",
                "Mar",
                "Apr",
                "May",
                "June",
                "July",
                "Aug",
                "Sep",
                "Oct",
                "Nov",
                "Dec",
            ];

            var now = new Date();
            var hours = now.getHours();
            var mins = now.getMinutes();

            var month = months[now.getMonth()];
            var date = now.getDate();

            var period = "am";
            if (hours > 11) {
                period = "pm";
                if (hours > 12) hours -= 12;
            }
            if (mins < 10) {
                mins = "0" + mins;
            }

            const todayData = `${date} ${month}`;
            const todayDataElement = document.getElementById("today_data");
            todayDataElement.innerText = todayData;

            return `${month} ${date} | ${hours}:${mins}${period}`;
        }

        const curDate = document.getElementById("curDate");
        curDate.innerHTML = getCurrentDateTime();
    </script>

</body>

</html>