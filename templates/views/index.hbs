<!DOCTYPE html>
<html lang="en">

<head>

    {{>headerlinks}}

</head>

<body>

    {{>navbar}}

    <!-- main part -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <!-- for left div -->
                    <div class="col-md-6 col-12 main_header_left">
                        <p>Welcome to Weather App</p>
                        <h1>Get the Latest <span class="text_clr"> Weather </span> Information</h1>
                        <a href="/weather"><button>Check Here</button></a>
                    </div>

                    <!-- for right div -->
                    <div class="col-md-6 col-12 main_header_right">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="images/4.png" class=" w-100" alt="1">
                                </div>
                                <div class="carousel-item">
                                    <img src="images/5.png" class=" w-100" alt="2">
                                </div>
                                <div class="carousel-item">
                                    <img src="images/6.png" class=" w-100" alt="3">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-target="#carouselExampleControls"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{>footer}}
</body>

</html>